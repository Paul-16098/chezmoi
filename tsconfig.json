{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": { "*": ["./*"] },
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
